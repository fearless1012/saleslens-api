# Database Configuration
MONGODB_URI=mongodb://localhost:27017/saleslens

# JWT Configuration
JWT_SECRET=saleslens_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=saleslens_session_secret_change_in_production

# Server Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Redis Configuration (Optional)
USE_REDIS=false
REDIS_URL=redis://localhost:6379

# LLaMA API Configuration
LLAMA_API_KEY=your_llama_api_key_here
LLAMA_BASE_URL=https://api.llama-api.com/chat/completions

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_DIR=uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
